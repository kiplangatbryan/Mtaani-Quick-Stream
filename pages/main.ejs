<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/mdl/material.min.css">
  <link href="/sprites/css-sprite/sprite-av-black.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <script src="/mdl/material.min.js"></script>
  <script src="js/jquerymlib3.1.4.js"></script>
  <title>
    <%=pageTitle %>
  </title>
</head>
<style>
.demo-card-square.mdl-card {
  width: 100%;
}
.demo-card-square > .mdl-card__title {
  color: #fff;
  background:
    url('../assets/demos/dog.png') bottom right 15% no-repeat #46B6AC;
}
.mdl-data-table td a{
  text-decoration: none;
}
.support{
        width: 100%;
        margin-bottom: 1em;
        min-height: 10vh;

      }

      .support .mdl-card__media{
        background: #000;
        display: flex;
        justify-content: center;
      }
.support #player{
        height: 100%;
        width: 100%;

      }
*{padding: 0;
margin: 0;}
.sg-card{
  width: 100vw !important;
}
</style>
<body>
  <!-- Square card -->


<div class="demo-card-square mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-card--expand">
    <h2 class="mdl-card__title-text">
      Tv Show
    </h2>
  </div>
  <div class="support">
    <div class="mdl-card__media">
      <video
      src="/service-stream/<%=title%>?show=<%=label %>"
      id="player"
      controls
      autoplay='true'
    ></video>
     </div>
  </div>
  <div class="mdl-card__supporting-text">
  <%=label %>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">

 <i class="material-icons">comment</i>
    </a>
  </div>
</div>
  <div class="sg-card" id="chart">
    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
  <thead>
    <tr>
      <th colspan="2" class="mdl-data-table__cell--non-numeric">Episodes</th>

    </tr>
  </thead>
  <tbody>
    <% for(const show in episodes){ %>
      <tr>
        <td class="mdl-data-table__cell--non-numeric sg-deck">
          <a href="/player/<%=episodes[show] %>?show=<%=label %>" class="mdl-color-text--grey-600"><%=episodes[show] %></a>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>

  </div>
  <script defer src="/js/mine.js"></script>
</body>

</html>
